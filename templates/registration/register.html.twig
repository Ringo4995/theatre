{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="bigInscr">
		<h1 class="annonce">Inscription</h1>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		<div class="contactNom contactNomnon">{{ form_row(registrationForm.nom) }}</div>
		<div class="contactNom">{{ form_row(registrationForm.prenom) }}</div>
		<div class="contactNom contactMail">{{ form_row(registrationForm.email) }}</div>
        <div class="contactNom registerMdp">{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
            }) }}</div>
        <div class="contactNom">{{ form_row(registrationForm.agreeTerms, { label : 'Accepter les termes'}) }}</div>

		<button type="submit" class="btn registerBtn">S'inscrire</button>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
